<% if @flag == true %>
	$("#myModal").hide();
	$(".modal-backdrop").hide();
	$("#question_<%= @question.id %> a button").addClass('green').attr("disabled", true).text('Correct');
<% else %>
	$("#myModal").hide();
	$(".modal-backdrop").hide();
	$("#question_<%= @question.id %> a button").addClass('red').attr("disabled", true).text('Wrong');
<% end %>
