<div class="container">
  <div class="tests">
    <div class="row">
      <section>
        <% @questions.each do |question| %>
          <div class="col-xs-6 col-md-3 col-lg-3 question_block" id="question_<%= question.id %>">
            <%= link_to question_path(question.id), remote: true do %>
            <button class="button"><%= 'Test '+ @x.to_s %></button>
          <%end%>
          <% @x+=1 %>
          </div>
        <%end%>
      </section>
    </div>
  </div>
  <div id="modal-window"tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  </div>
</div>
